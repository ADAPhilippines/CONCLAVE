@page "/"
@page "/sessions"

@using Conclave.Lotto.Web.Components

<PageTitle>Index</PageTitle>

<div class="flex justify-between gap-3 1xl:gap-0">
    <div>
        <SessionList>
            @foreach (var item in Sessions)
            {
                <SessionCard OnSessionCardClicked="() => OnSessionCardClicked(item)" SessionDetails="item"
                OnBtnBuyTicketClicked="() => OnBtnBuyTicketClicked(item)" />
            }
        </SessionList>
        <div>
            <h5>Ticket Entry</h5>
            <ul class="flex justify-center border-2">
                @for (int i = 0; i < userNames.Count; i++)
                {
                    int j = i;
                    <li>
                        <MudTextField 
                        Variant="Variant.Outlined" 
                        Class="mr-2" 
                        @bind-Value="@userNames[j]" 
                        @ref="InputTextRef[j]"
                        />
                    </li>
                }
                <MudButton OnClick="OnTestClick">Test</MudButton>

            </ul>
        </div>

        @foreach (string userName in userNames)
        {
            <p>@userName</p>
        }
    </div>
    <div>
        <div>
            <MudButton OnClick="OpenDialog" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">
                Create Session
            </MudButton>
        </div>

        <div class="outline outline-1 mt-4">
            <LottoWinnersList>
                @foreach (var lottoWinner in LottoWinners)
                {
                    <LottoWinnerCard Address="@lottoWinner.Address" PrizeWon="@lottoWinner.PrizeWon" />
                }
            </LottoWinnersList>
        </div>

        <div class="mt-4 outline outline-1">
            <TicketList />
        </div>
    </div>
</div>
