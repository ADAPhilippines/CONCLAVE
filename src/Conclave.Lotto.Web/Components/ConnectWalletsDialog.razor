<MudDialog Class="connect-wallets">
    <DialogContent>
        <hr>
        <div class="mt-3">
            <div class="flex justify-between items-center pb-4">
                <div class="w-full">
                    <div class="grid grid-cols-3">
                        <div class="flex items-center col-span-1 gap-3">
                            <MudImage 
                                Class="max-w-[40px]"
                                Src="images/metamask-logo.svg"
                                Alt="Metamask logo"
                            />
                            <p class="font-bold text-[20px]">Metamask</p>
                        </div>
                        
                        <div class="grid grid-rows-2 col-span-2 row-span-2">
                            <div class="flex items-center gap-1">
                                <MudIcon 
                                    Icon="@Icons.Filled.AccountBalanceWallet"
                                    Title="Metamask wallet address"
                                />
                                <p class="row-span-1">@MetamaskAddress</p>
                            </div>
                            <div class="row-span-2 flex gap-3">
                                <MudButton
                                    Variant="Variant.Text"
                                    StartIcon="@Icons.Filled.ContentCopy"
                                    Color="Color.Primary"
                                    OnClick="() => OnCopyButtonClicked(MetamaskAddress)">
                                        Copy
                                </MudButton>

                                <MudButton
                                    Variant="Variant.Text"
                                    StartIcon="@Icons.Filled.ExitToApp"
                                    Color="Color.Error">
                                        Disconnect
                                </MudButton>
                            </div>
                        </div>
                    </div>

                    <MudExpansionPanels Elevation="0" Class="outline outline-1 mt-2">
                        <MudExpansionPanel Text="Transfer to Cardano">
                            <div class="grid grid-cols-3 gap-3">
                                <MudTextField 
                                    Class="col-span-2" 
                                    Label="Amount" 
                                    Variant="Variant.Filled"
                                    @bind-Value="MilkomedaValue">
                                </MudTextField>

                                <MudSelect 
                                    Class="col-span-1"
                                    T="string"
                                    Label="Asset"
                                    AnchorOrigin="Origin.BottomCenter"
                                    Variant="Variant.Outlined">
                                        <MudSelectItem Value="@("MilkAda")" />
                                        <MudSelectItem Value="@("CNCLV")" />
                                </MudSelect>
                            </div>
                            <MudButton 
                                Size="Size.Large"
                                Class="mt-3"
                                Variant="Variant.Filled"
                                Color="Color.Primary">
                                    Send
                            </MudButton>
                        </MudExpansionPanel>
                    </MudExpansionPanels>

                    <div class="mt-2 flex">
                        <div class="mr-5">
                            <span class="font-bold">CNCLV:</span> <span>1,230,405</span>
                        </div>
                        <div>
                            <span class="font-bold">MilkAda:</span> <span>93,498</span>
                        </div>
                    </div>
                </div>
            </div>

            <hr>

            <div class="flex justify-between items-center pt-4">
                <div class="w-full">
                    <div class="grid grid-cols-3">
                        <div class="flex items-center col-span-1 gap-3">
                            <MudImage 
                                Class="max-w-[40px]"
                                Src="images/nami.png"
                                Alt="Nami logo"
                            />
                            <p class="font-bold text-[20px]">Nami</p>
                        </div>
                        
                        <div class="grid grid-rows-2 col-span-2 row-span-2">
                            <div class="flex items-center gap-1">
                                <MudIcon 
                                    Icon="@Icons.Filled.AccountBalanceWallet"
                                    Title="Metamask wallet address"
                                />
                                <p class="row-span-1">@CardanoAddress</p>
                            </div>
                            <div class="row-span-2 flex gap-3">
                                <MudButton
                                    Variant="Variant.Text"
                                    StartIcon="@Icons.Filled.ContentCopy"
                                    Color="Color.Primary"
                                    OnClick="() => OnCopyButtonClicked(CardanoAddress)">
                                        Copy
                                </MudButton>

                                <MudButton
                                    Variant="Variant.Text"
                                    StartIcon="@Icons.Filled.ExitToApp"
                                    Color="Color.Error">
                                        Disconnect
                                </MudButton>
                            </div>
                        </div>
                    </div>

                    <MudExpansionPanels Elevation="0" Class="outline outline-1 mt-2">
                        <MudExpansionPanel Text="Transfer to Milkomeda">
                            <div class="grid grid-cols-3 gap-3">
                                <MudTextField
                                    Class="col-span-2"
                                    Label="Amount"
                                    Variant="Variant.Filled"
                                    @bind-Value="CardanoValue">
                                </MudTextField>

                                <MudSelect
                                    Class="col-span-1"
                                    T="string"
                                    Label="Asset"
                                    AnchorOrigin="Origin.BottomCenter"
                                    Variant="Variant.Outlined">
                                        <MudSelectItem Value="@("Ada")" />
                                        <MudSelectItem Value="@("CNCLV")" />
                                </MudSelect>
                            </div>
                            <MudButton
                                Size="Size.Large"
                                Class="mt-3"
                                Variant="Variant.Filled"
                                Color="Color.Primary">
                                    Send
                            </MudButton>
                        </MudExpansionPanel>
                    </MudExpansionPanels>

                    <div class="mt-2 flex">
                        <div class="mr-5">
                            <span class="font-bold">CNCLV:</span> <span>23,433,673</span>
                        </div>
                        <div>
                            <span class="font-bold">Ada:</span> <span>102,371</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>
