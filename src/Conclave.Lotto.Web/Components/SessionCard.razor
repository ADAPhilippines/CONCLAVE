<div class="max-w-[250px] border-1 border-black border-solid @SessionStatusClass()" >
    <MudCard Class="m-0">
        <MudCardContent>
            <div class="cursor-pointer" @onclick="@OnSessionCardClicked">
                <MudText>Session Id: @SessionDetails.Id</MudText>
                <MudText Typo="Typo.body2">Session Name: @SessionDetails.Name</MudText>
            </div>
            <MudText Typo="Typo.body2">Sstatus: @SessionDetails.CurrentStatus</MudText>
            <MudText Typo="Typo.body2">Current Prize</MudText>
            <MudText Typo="Typo.h5">@SessionDetails.PrizePool</MudText>
            <CountdownTimer ContainerType="Card" StartDateTime="@SessionDetails.StartDate"
                DateCreated="@SessionDetails.DateCreated" />
            <MudText Typo="Typo.caption">Last Winning Combination Result:</MudText>
            <CombinationResult />
            @* NOTE: Create a buy ticket Modal *@
            <MudText Typo="Typo.subtitle1">Ticket Price: @SessionDetails.TicketPrice</MudText>
            <MudButton Color="Color.Primary" OnClick="OnBtnBuyTicketClicked">Buy Ticket Now</MudButton>
        </MudCardContent>
    </MudCard>
</div>
